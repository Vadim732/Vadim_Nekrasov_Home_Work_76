@model List<GalleryImage>

@if (Model != null && Model.Count > 0)
{
    int index = 0;
    foreach (GalleryImage image in Model)
    {
        index++;
        var isActive = index == 1 ? "active" : "";
        <div id="@index" class="carousel-item @isActive">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal_@index" style="border: none; padding: 0; margin: 0;">
                <img src="@image.ImagePath" class="d-block h-100 w-100" alt="gallery-image" style="width: 450px !important; height: 600px !important;">
            </button>
        </div>
    }
}